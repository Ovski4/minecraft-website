{% if active is not defined %}
  {% set active = null %}
{% endif %}

    <nav id="nav" class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
               <i class="icon-chevron-down"></i>
            </button>
            <div class="navbar-brand visible-xs" href="#">
                Navigation
                <ul class="lang-menu">
                    <li class="flag-fr">
                        <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">
                            Fran√ßais
                        </a>
                    </li>
                    <li class="flag-en">
                        <a href="{{  path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'}))}}">
                            English
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav nav-left">
                <li {% if active == 'home' %} class="current" {% endif %}>
                <a href="{{ path('home') }}">
                    {% trans %}Home{% endtrans %}
                </a>
                </li>
                <li class="parent{% if active == 'stats' %} current{% endif %}">
                    <a>Stats</a>
                    <ul class="nav">
                        <li>
                            <a href="{{ path('players_stats') }}">
                                {% trans %}Players{% endtrans %}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('factions_stats') }}">
                                {% trans %}Factions{% endtrans %}
                            </a>
                        </li>
                    </ul>
                </li>
                <li {% if active == 'contact' %} class="current" {% endif %}>
                    <a href="{{ path('contact') }}">
                        {% trans %}Contact{% endtrans %}
                    </a>
                </li>
                <li {% if active == 'map' %} class="current" {% endif %}>
                    <a href="{{ path('map') }}">
                        {% trans %}Map{% endtrans %}
                    </a>
                </li>
                <li {% if active == 'server' %} class="current" {% endif %}>
                    <a href="{{ path('server') }}">
                        {% trans %}Server{% endtrans %}
                    </a>
                </li>
                <li {% if active == 'forum' %} class="current" {% endif %}>
                    <a href="{{ path('ovski_forum_forum_categories') }}">
                        {% trans %}Forum{% endtrans %}
                    </a>
                </li>
             </ul>
            {% if app.user is not null and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <ul class="nav navbar-nav nav-right">
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}" title="{% trans %}Log{% endtrans %}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_profile_show') }}" title="{% trans %}Profile{% endtrans %}">
                            {% trans %}Profile{% endtrans %}
                        </a>
                    </li>
                </ul>
            {% else %}
                <ul class="nav navbar-nav nav-right">
                    <li>
                        <a href="{{ path('fos_user_security_login') }}" title="{% trans %}Log in{% endtrans %}">
                            {% trans %}Log in{% endtrans %}
                        </a>
                    </li>
                </ul>
            {% endif %}
        </div>
    </nav>

