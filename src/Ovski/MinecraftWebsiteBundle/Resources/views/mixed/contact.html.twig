{% extends "::base.html.twig" %}
{% form_theme form _self %}

{% block title %}
    {% trans %}Contact{% endtrans %}
    {{ parent() }}
{% endblock %}

{% block menu %}
    {% include "OvskiMinecraftWebsiteBundle::menu.html.twig" with {active: 'contact'} %}
{% endblock %}

{% block body %}

<div class="contact-form">
    <h1>
        <i class="icon-envelope"></i>
        {% trans %}Contact us{% endtrans %}
    </h1>

    <div class="row">
        {% block content %}
            {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="col-xs-12 col-sm-5">
                    <div class="fields">
                    {{ form_row(form.name) }}
                    {{ form_row(form.subject) }}
                    {{ form_row(form.email) }}
                        
                    </div>
                </div>
                <div class="col-xs-12 col-sm-5 message">
                    {{ form_row(form.message) }}
                    <div class="submit">
                        {{ form_row(form.submit) }}
                    </div>
                </div>
            {{ form_end(form) }}
        {% endblock %}
    </div>
</div>
{% endblock body %}