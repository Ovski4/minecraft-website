{% extends "::base.html.twig" %}
{% form_theme form _self %}

{% block title %}
    {% trans %}Contact{% endtrans %}
    {{ parent() }}
{% endblock %}

{% block menu %}
    {% include "OvskiMinecraftWebsiteBundle::menu.html.twig" with {active: 'contact'} %}
{% endblock %}

{% block body %}

<div class="contact-form">
    <h1>
        <i class="icon-envelope"></i>
        {% trans %}Contact us{% endtrans %}
    </h1>

    <div class="row-fluid">
        {% block content %}
            {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="span5">
                    <div class="pull-right">
                    {{ form_row(form.name) }}
                    {{ form_row(form.subject) }}
                    {{ form_row(form.email) }}
                        <div class="pull-right">
                            {{ form_row(form.submit) }}
                        </div>
                    </div>
                </div>
                <div class="span7 message">
                    {{ form_row(form.message) }}
                </div>
            {{ form_end(form) }}
        {% endblock %}
    </div>
</div>
{% endblock body %}