{% extends "::base.html.twig" %}

{% block title %}
    Forum - {{ category_name }}
    {{ parent() }}
{% endblock %}

{% block menu %}
    {% include "OvskiMinecraftWebsiteBundle::menu.html.twig" with {active: 'forum'} %}
{% endblock %}

{% block body %}
    <div class="forum-category content">
        <h2>Forum - {{ category_name }}</h2>
        {% if topics is not empty %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Author</th>
                    <th>Posts</th>
                    <th>Last post</th>
                </tr>
            </thead>
            <tbody>
                {% for topic in topics %}
                    <tr>
                        <td>
                            <a href="{{ path('topic', { categorySlug: category_slug, topicSlug: topic.slug }) }}">
                                {{ topic.title }}
                            </a>
                        </td>
                        <td>{{ topic.author }}</td>
                        <td>{{ topic.numPosts }}</td>
                        <td>{{ topic.updatedAt | date("d/m/Y H\\hi") }}</td>    
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
                There are no topics in this category
        {% endif %}
        
        <h3>Create a new topic</h3>
        {{ form(form) }}
    </div>
{% endblock %}
