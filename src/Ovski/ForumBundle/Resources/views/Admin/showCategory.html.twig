{% extends '::adminBase.html.twig' %}

{% block body %}
    <h1>{% trans %}Category{% endtrans %}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>{% trans %}Language{% endtrans %}</th>
                <td>{{ category.language }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('ovski_forum_administration_category_show', { 'id': category.id }) }}">
            {% trans %}Go back to the category list{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('ovski_forum_administration_category_edit', { 'id': category.id }) }}">
            {% trans %}Edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
