{% extends '::adminBase.html.twig' %}

{% block body %}
    <h1>{% trans %}Categories{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Description{% endtrans %}</th>
                <th>{% trans %}Language{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    <a href="{{ path('ovski_forum_administration_category_show', { 'id': category.id }) }}">
                        {{ category.id }}
                    </a>
                </td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.language }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ovski_forum_administration_category_show', { 'id': category.id }) }}">
                            {% trans %}show{% endtrans %}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('ovski_forum_administration_category_edit', { 'id': category.id }) }}">
                            {% trans %}edit{% endtrans %}
                        </a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ovski_forum_administration_category_new') }}">
                {% trans %}Create a new category{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
