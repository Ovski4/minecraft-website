{% extends '::adminBase.html.twig' %}

{% block body %}
    <h1>Category list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Language</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('ovski_forum_administration_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.language }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ovski_forum_administration_category_show', { 'id': category.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ovski_forum_administration_category_edit', { 'id': category.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ovski_forum_administration_category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
