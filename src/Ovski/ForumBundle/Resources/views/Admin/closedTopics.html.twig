{% extends '::adminBase.html.twig' %}

{% block body %}
    <h1>{% trans %}Closed topics{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>{% trans %}Action{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for topic in topics %}
                <tr>
                    <td>{{ topic.id }}</td>
                    <td>{{ topic.title }}</td>
                    <td>{{ render(controller('OvskiForumBundle:Admin:deleteTopicForm', {'id': topic.id})) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% endblock %}

