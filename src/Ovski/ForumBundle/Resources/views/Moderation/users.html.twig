{% extends '::adminBase.html.twig' %}

{% block menu %}
    {% include "OvskiForumBundle:Admin:menu.html.twig" with {active: 'categories'} %}
{% endblock %}

{% block body %}

    <div class="row-fluid">
        <div class="span6">
            <h3>Disabled users</h3>
            <ul>
                {% for user in disabled_users %}
                    <li>
                        {{ user }}
                    </li>
                {% else %}
                    No disabled users
                {% endfor %}
            </ul>
        </div>
        <div class="span6">
            <h3>Enabled users</h3>
            <ul>
                {% for user in enabled_users %}
                    <li>
                        {{ user }}
                    </li>
                {% else %}
                   No enabled users
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}