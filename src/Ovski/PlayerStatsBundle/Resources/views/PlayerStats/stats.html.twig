{% extends "::base.html.twig" %}

{% block stylesheets %}
        {{ parent() }}
        {# <link rel="stylesheet" type="text/css" href="{{ asset("bundles/ovskiwebsite/css/map_page.css") }}"/> #}
{% endblock %}

{% block menu %}

    {% include "OvskiWebsiteBundle:Website:menu.html.twig" with {active: 'stats'} %}

{% endblock %}

{% block body %}

    <h2>Stats</h2>

    <table>
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Kills</th>
            <tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td><a href="{{ path('single_stat', { pseudo: player.pseudo }) }}">{{ player.pseudo }}</a></td>
                <td>{{ player.kills }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}