<?php

namespace Studmine\StatsBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * PlayerStats
 *
 * @ORM\Table()
 * @ORM\Entity(repositoryClass="Studmine\StatsBundle\Repository\PlayerStatsRepository")
 */
class PlayerStats
{
    /**
     * @ORM\OneToOne(targetEntity="Studmine\StatsBundle\Entity\User")
     * @ORM\JoinColumn(nullable=false)
     * @ORM\Id
     */
    private $user;

    /**
     * @var integer
     *
     * @ORM\Column(type="integer")
     */
    private $blocksBroken;

    /**
     * @var integer
     *
     * @ORM\Column(type="integer")
     */
    private $blocksPlaced;

    /**
     * @var integer
     *
     * @ORM\Column(type="integer")
     */
    private $stupidDeaths;

    /**
     * @var integer
     *
     * @ORM\Column(type="integer")
     */
    private $deaths;

    /**
     * @var integer
     *
     * @ORM\Column(type="integer")
     */
    private $kills;

    /**
     * @var integer
     *
     * @ORM\Column(type="integer")
     */
    private $timePlayed;

    /**
     * @var integer
     *
     * @ORM\Column(type="integer")
     */
    private $verbosity;

    /**
     * Set blocksBroken
     *
     * @param integer $blocksBroken
     * @return PlayerStats
     */
    public function setBlocksBroken($blocksBroken)
    {
        $this->blocksBroken = $blocksBroken;
    
        return $this;
    }

    /**
     * Get blocksBroken
     *
     * @return integer 
     */
    public function getBlocksBroken()
    {
        return $this->blocksBroken;
    }

    /**
     * Set blocksPlaced
     *
     * @param integer $blocksPlaced
     * @return PlayerStats
     */
    public function setBlocksPlaced($blocksPlaced)
    {
        $this->blocksPlaced = $blocksPlaced;
    
        return $this;
    }

    /**
     * Get blocksPlaced
     *
     * @return integer 
     */
    public function getBlocksPlaced()
    {
        return $this->blocksPlaced;
    }

    /**
     * Set stupidDeaths
     *
     * @param integer $stupidDeaths
     * @return PlayerStats
     */
    public function setStupidDeaths($stupidDeaths)
    {
        $this->stupidDeaths = $stupidDeaths;
    
        return $this;
    }

    /**
     * Get stupidDeaths
     *
     * @return integer 
     */
    public function getStupidDeaths()
    {
        return $this->stupidDeaths;
    }

    /**
     * Set deaths
     *
     * @param integer $deaths
     * @return PlayerStats
     */
    public function setDeaths($deaths)
    {
        $this->deaths = $deaths;
    
        return $this;
    }

    /**
     * Get deaths
     *
     * @return integer 
     */
    public function getDeaths()
    {
        return $this->deaths;
    }

    /**
     * Set kills
     *
     * @param integer $kills
     * @return PlayerStats
     */
    public function setKills($kills)
    {
        $this->kills = $kills;
    
        return $this;
    }

    /**
     * Get kills
     *
     * @return integer 
     */
    public function getKills()
    {
        return $this->kills;
    }

    /**
     * Set timePlayed
     *
     * @param integer $timePlayed
     * @return PlayerStats
     */
    public function setTimePlayed($timePlayed)
    {
        $this->timePlayed = $timePlayed;
    
        return $this;
    }

    /**
     * Get timePlayed
     *
     * @return integer 
     */
    public function getTimePlayed()
    {
        return $this->timePlayed;
    }

    /**
     * Set verbosity
     *
     * @param integer $verbosity
     * @return PlayerStats
     */
    public function setVerbosity($verbosity)
    {
        $this->verbosity = $verbosity;
    
        return $this;
    }

    /**
     * Get verbosity
     *
     * @return integer 
     */
    public function getVerbosity()
    {
        return $this->verbosity;
    }

    /**
     * Set player
     *
     * @param \Studmine\StatsBundle\Entity\User $user
     * @return PlayerStats
     */
    public function setPlayer(\Studmine\StatsBundle\Entity\User $player)
    {
        $this->player = $player;
    
        return $this;
    }

    /**
     * Get player
     *
     * @return \Studmine\StatsBundle\Entity\Player 
     */
    public function getPlayer()
    {
        return $this->player;
    }
}
